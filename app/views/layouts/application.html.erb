<!DOCTYPE html>
<html>
  <head>
    <title>DummyFiveChannel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--header-->
    <header class="header navbar navbar-expand-sm navbar-light bg-light">
      <%= link_to root_path, class: "navbar-brand" do %>
        ５５ちゃんねる
      <% end %>

      <!-- 検索フォーム -->
      <div class="search-form-block">
        <%= search_form_for @q, url: search_sureads_path, class: "form-inline navbar-form navbar-right" do |f| %>
          <div class="form-group">
            <%= f.label :title_or_responses_comment_cont, 'Title', class: 'control-label sr-only' %>
            <%= f.search_field :title_or_responses_comment_cont, placeholder: "検索ワードを入力...", class: 'form-control' %>
          </div>
          <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>
      <!-- 検索フォーム/ -->

      <nav class="collapse navbar-collapse">
        <ul class="nav navbar-nav ml-auto">
          <li class="mr-3">
            <%= link_to sureads_path, class: "sign-up-link nav-link" do %>
              <span>掲示板一覧</span>
            <% end %>
          </li>

          <% if user_signed_in? %>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, class: "sign-up-link nav-link" do %>
                <span>ログアウト(<%= current_user.name %>さん)</span>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_registration_path, class: "sign-up-link nav-link" do %>
                <span>新規登録</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path, class: "nav-link" do %>
                <span>ログイン</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>
    <!--header/-->

    <!--<p class="notice"><%= notice %></p>
    <p class="alert" style="padding: 0"><%= alert %></p>-->
    <%= yield %>

    <!--footer-->
    <footer class="footer">
      <div class="container">
        <div class="contents-group row align-items-center">
          <div class="content-right ml-auto">
            <p class="mb-0">© 2020 55Channel site.</p>
          </div>
        </div>
      </div>
    </footer>
    <!--footer/-->
  </body>
</html>
